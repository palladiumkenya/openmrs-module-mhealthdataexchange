    <!-- Adds MhealthdataexchangeService to OpenMRS context so it can be accessed
    calling Context.getService(MhealthdataexchangeService.class) -->
    <!--<bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.mhealthdataexchange.api.MhealthdataexchangeService</value>
                <ref bean="mhealthdataexchange.MhealthdataexchangeService" />
            </list>
        </property>
    </bean>-->

    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.mhealthdataexchange.api.MhealthdataexchangeService</value>
                <bean
                        class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
                    <property name="transactionManager">
                        <ref bean="transactionManager" />
                    </property>
                    <property name="target">
                        <bean class="org.openmrs.module.mhealthdataexchange.api.impl.MhealthdataexchangeServiceImpl">
                            <property name="dao">
                                <bean class="org.openmrs.module.mhealthdataexchange.api.db.hibernate.HibernateMhealthdataexchangeDAO">
                                    <property name="sessionFactory">
                                        <ref bean="sessionFactory" />
                                    </property>
                                </bean>
                            </property>
                        </bean>
                    </property>
                    <property name="preInterceptors">
                        <ref bean="serviceInterceptors" />
                    </property>
                    <property name="transactionAttributeSource">
                        <ref bean="transactionAttributeSource" />
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="kenyaemr.app.mhealthdataexchange" factory-bean="kenyacore.appFactoryBean" factory-method="createInstance">
        <constructor-arg value="kenyaemr.mhealthdataexchange.home" />
        <constructor-arg value="mHealth DataExchange" />
        <constructor-arg value="mhealthdataexchange/mhealthdataexchange.page" />
        <constructor-arg value="mhealthdataexchange:mhealthdataexchange_96_83px.png" />
        <constructor-arg value="889944" />
    </bean>
</beans>
